<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Use.CanvasActivity">


    <com.example.myapplication.View.CanvasView
        android:id="@+id/canvasView"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/canvasView">

        <RadioButton
            android:id="@+id/radio_top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="上折叠"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/radio_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="下折叠"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/radio_skew"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="斜"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/radio_set"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="连续"
            android:layout_weight="1" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>